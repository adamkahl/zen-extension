{
  "manifest_version": 3,
  "name": "Tablio",
  "version": "1.2.0",
  "description": "Rename and organize browser tabs automatically using customizable URL-based rules, groups, colors, and tags.",
  "homepage_url": "https://github.com/adamkahl/zen-extension",
  "author": "Adam Kahl",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Tablio",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}