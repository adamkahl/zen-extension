{
  "manifest_version": 2,
  "name": "Zen Tidy Up",
  "version": "1.0.0",
  "description": "Organize and rename browser tabs by URL patterns with custom groups and categories for a cleaner browsing experience.",
  "homepage_url": "https://github.com/yourusername/zen-extension",
  "author": "Your Name",
  "permissions": ["tabs", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Tidy Tabs",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "zen-tidy-up@yourdomain.com",
      "strict_min_version": "57.0"
    }
  }
}
